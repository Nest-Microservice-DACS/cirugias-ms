generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Surgery {
  id          Int      @id @default(autoincrement())
  patientId  Int
  operatingRoomId Int
  serviceId  Int
  type        String
  anesthesia   String
  date       DateTime
  status      String @default("scheduled")
  priority   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  surgeryDoctors SurgeryDoctor[] // Opposite relation field

  @@index([status])
}

// Representa la relación entre una cirugía y un médico con su rol específico
model SurgeryDoctor {
  id        Int    @id @default(autoincrement())
  surgeryId Int
  doctorId  Int
  role       String // CIRUJANO, AYUDANTE, ANESTESISTA, ...
  surgery Surgery @relation(fields: [surgeryId], references: [id])

  @@unique([surgeryId, doctorId, role])
}