generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

model Cirugia {
  id          Int      @id @default(autoincrement())
  pacienteId  Int
  quirofanoId Int
  servicioId  Int
  tipo        String
  anestesia   String
  fecha       DateTime
  estado      String? @default("programada")
  prioridad   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([estado])
}

